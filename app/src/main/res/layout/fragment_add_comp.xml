<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddCompFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/new_comp_image"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_brand"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_image">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Computer Brand"
                    android:gravity="center"
                    android:id="@+id/new_comp_brand_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_model"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_brand">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Computer Model"
                    android:gravity="center"
                    android:id="@+id/new_comp_model_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_os"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_model">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Operating System Version"
                    android:gravity="center"
                    android:id="@+id/new_comp_os_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_processor"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_os">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Computer Processor"
                    android:gravity="center"
                    android:id="@+id/new_comp_processor_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_memory"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_processor">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RAM, ROM Details"
                    android:gravity="center"
                    android:id="@+id/new_comp_memory_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_screen"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_memory">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Display Size"
                    android:gravity="center"
                    android:id="@+id/new_comp_screen_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_touch"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_screen">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="If Touch"
                    android:gravity="center"
                    android:id="@+id/new_comp_touch_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_condition"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_touch">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Condition"
                    android:gravity="center"
                    android:id="@+id/new_comp_condition_et"
                    android:singleLine="true"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_price"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_condition">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:gravity="center"
                    android:id="@+id/new_comp_price_et"
                    android:singleLine="true"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_stock"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_price">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Available for Sale"
                    android:gravity="center"
                    android:id="@+id/new_comp_stock_et"
                    android:singleLine="true"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_comp_additional"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/new_comp_price">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Additional Information \n Include Exact location"
                    android:gravity="center"
                    android:id="@+id/new_comp_additional_text"
                    android:singleLine="false"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_comp"
                    app:cornerRadius="20dp"
                    android:text="ADD"
                    app:icon="@drawable/ic_baseline_add_box"
                    app:iconGravity="start"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel_add_comp"
                    app:cornerRadius="20dp"
                    android:text="cancel"
                    app:iconGravity="end"
                    app:icon="@drawable/ic_baseline_cancel_presentation_24"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>